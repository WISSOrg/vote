extends layout

mixin votes-list(voteType)
  form.list-group
    - var publicationsFound = publications && Array.isArray(publications) && publications.length > 0;
    - if (publicationsFound) {
    .alert.alert-success 以下の発表に投票しました。
    -   for (var i = 0; i < publications.length; i ++) {
    -     var publication = publications[i];
    .list-group-item
      strong
        span.badge.badge-pill.badge-secondary #{publication[voteType + 'Id']}
        | &nbsp;#{publication.title}
      br
      small #{publication.authors}
    -   }
    - } else {
    .alert.alert-warning 白票を投じました。（以前投票した発表がある場合、白票で上書きされています。投票ページに戻って改めて投票してください。）
    - }
    hr
    .text-center
      a.btn.btn-lg.btn-primary(href=rootDir+'/'+voteType+'s') 投票ページに戻る
