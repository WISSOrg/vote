extends layout

block content
  - if (papers && Array.isArray(papers)) {
  .alert.alert-success 以下の論文に投票しました。
  .list-group
    - for (var i = 0; i < papers.length; i ++) {
    -   var paper = papers[i];
    .list-group-item
      strong #{paper.title}
      br
      small #{paper.authors}
    - }
  - } else {
  .alert.alert-danger 論文データが見つかりません。
  - }
